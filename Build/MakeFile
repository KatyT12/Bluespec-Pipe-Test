
# Directory containing the Bluespec Training distribution directory

TOPDIR ?= ..
TOPFILE ?= in
INCLUDE = $(TOPDIR)/include
C_FLAGS = -Wall -I $(INCLUDE)



.PHONY: help
help:

EXE = $(TOPFILE)
BUILD_DIR = build


.PHONY: build
build: 
	full_clean compile

run: 
	./build/in

build_dir:
	mkdir  $(BUILD_DIR)

.PHONY: compile
compile: build_dir
	@echo Compiling for Bluesim ...
	gcc -o $(BUILD_DIR)/$(EXE) $(TOPDIR)/$(TOPFILE).c $(C_FLAGS)



.PHONY: full_clean
full_clean:
	rm -r -f  $(BUILD_DIR)
